<h1>Listing workshops</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Nav setting</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workshops.each do |workshop| %>
  <tr>
    <td><%= workshop.name %></td>
    <td><%= workshop.nav_setting %></td>
    <td><%= workshop.description %></td>
    <td><%= link_to 'Show', admin_workshop_path(workshop) %></td>
    <td><%= link_to 'Edit', edit_admin_workshop_path(workshop) %></td>
    <td><%= link_to 'Destroy', admin_workshop_path(workshop), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

